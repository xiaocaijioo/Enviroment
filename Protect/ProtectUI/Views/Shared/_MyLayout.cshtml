<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script src="//ajax.aspnetcdn.com/ajax/jQuery/jquery-1.8.3.min.js"></script>
    <link rel="stylesheet" type="text/css" href="~/Content/bootstrap.min.css" />
    <style>
        body {
            background-color: #D9D9D9;
            /*border: 2px solid red;*/
        }
        /* 头部栏容器的容器 */
        .topbar {
            height: 60px;
            width: 100%;
            background-color: #191818;
            color: #333;
            font-size: 14px;
            line-height: 60px;
            position: absolute;
            top: 0;
        }
        /*头部字体颜色*/
        .topbar a {
            color: #908c8c;
        }
        /*头部导航设置*/
        .topcontainer ul {
            list-style-type: none;
            background-color: #191818;
        }

        .topcontainer li {
            float: left;
            border-right: solid;
        }

        /*天气显示*/
        .center{
            left: 50%;
        }
        #weatherli {
            border: none;
        }

        .topcontainer li a {
            display: block;
            text-align: center;
            padding: 0 14px;
            text-decoration: none;
        }
        /*当鼠标悬停在导航条上的字时*/
        .topcontainer li a:hover:not(.active) {
            color: #ffffff;
            }

        /* 黏性导航栏容器*/
        .head-nav {
            margin-top: 9px;
            height: 90px;
            width: 100%;
            line-height: 90px;
            position: -webkit-sticky;
            position: sticky;
            top: 0px;
            z-index:3;
            background: white;
            /*border: 2px solid blue;*/
        }

/*        .head1 {
            height: 100px;
            line-height: 100px;
            padding: 0 50px;
            background: yellow;
        }*/
        /*图片位置*/
        .logo {
            padding: 0;
            margin: 0;
            float: left;
            display: inline-flex;
        }
        /*图片大小*/
        .navlogo {
            border: 0;
            height: 90px;
            width: 180px;
            margin-top: -3px;
        }
        /*导航栏左边*/
        .leftnav {
            float: left;
            display: inline-flex;
            font-size: 16px;
        }

        .leftnav .first-nav {
            list-style-type: none;
            background-color: white;
            padding: 0px;
        }

        .leftnav .first-nav li {
            float: left;
        }

        .leftnav li a {
            display: block;
            height: 90px;
            color: #191818;
            line-height: 90px;
            margin-right: 30px;
            padding-right: 15px;
            padding-left: 15px;
            text-decoration: none;
        }
        /*主题色*/
        .leftnav li a:hover:not(.active) {
            color: #539469;
         }
        /*下拉菜单*/
        .dropdown {
            position: relative;
            display: inline-block;
        }

        .secand-nav {
            display: none;
            position: absolute;
            background-color: white;
            text-align: center;
            box-shadow: 0px 16px 16px 0px rgba(0,0,0,0.2);
        }

        .secand-nav ul {
            margin: 0;
            padding: 0;
        }

        .secand-nav li {
            display: inline-block;
            height: 50px;
        }

        .secand-nav li a {
            width: 100%;
            display: block;
            line-height: 50px;
        }
        /*当鼠标移到一级菜单时候显示二级菜单*/
        .dropdown:hover .secand-nav {
            display: block;
        }

        .secand-nav li:hover {
            border-bottom: 0.5px solid;
        }

        /*导航栏右边*/
        .rightnav {
            background: white;
            height: 90px;
            margin-right: 40px;
            float: right;
            display: inline-flex;
            position: absolute;
        }
        /*搜索输入框*/
        .searchbox {
            height: 40px;
            width: 150px;
            vertical-align: middle;
        }

        /*搜索按钮使用了bootstrap*/
        /*.searchbtn {
            height: 40px;
            width: 40px;
            vertical-align: middle;
            border:0.5px solid #e0e0e0;
            position: relative;
            color: #b0b0b0;
            background:transparent;
        }*/
        .rightnav .searchbtn:hover {
            background-color: #539469;
        }
    </style>
</head>
<body>
    @*<div style="float:right">
        @{Html.RenderAction("Getweather", "Home");}
    </div>*@
    <!--头部栏容器-->
    <div class="topbar">
        <!--导航条内部容器-->
        <div class="topcontainer">
            <!--导航连接-->
            <div style="float:left">
                <ul>
                    <li>@Html.ActionLink("环境知识保护与宣传", "Index", "Home")</li>
                    <li>@Html.ActionLink("关于我们", "About", "Home")</li>
                    <li>@Html.ActionLink("联系 ", "Contact", "Home")</li>
                </ul>
            </div>
            <div style="float:left" class="center">
                <ul class="center-text">
                    <li id="weatherli">
                        <a href="http://www.webxml.com.cn/WebServices/WeatherWebService.asmx?op=getWeatherbyCityName">@{Html.RenderAction("Getweather", "Home");}</a>
                    </li>
                </ul>
            </div>
            <!--注册登录-->
            <div style="float:right">
                <ul>
                    @{
                        if (Session["userid"] == null)
                        {
                            <li>@Html.ActionLink("登录", "Login", "Users")</li>
                            <li>@Html.ActionLink("注册", "Create", "Users")</li>
                        }
                        else
                        {
                           
                        }

                    }
                </ul>
            </div>
        </div>
    </div>

    <!--顶部标题栏-->
    <div class="head-nav">
        <div class="container head1">
            <!--logo-->
            @*<div class="logo">
                    <a href=""><img src="~/image/logo1.png" class="navlogo" /> </a>
                </div>*@
            <!--header左边导航-->
            <div class="leftnav">
                <ul class="first-nav">
                    <li><a href="#"><img src="~/Resources/logo.png" class="navlogo" /></a></li>
                    <li class="dropdown">
                        @Html.ActionLink("可持续生活", "Create", "Users")
                        <ul class="secand-nav">
                            <li><a href="#" style="text-align:left">时尚</a></li>
                            <li><a href="#" style="text-align:left">饮食</a></li>
                            <li><a href="#" style="text-align:left">其他</a></li>
                        </ul>
                    </li>
                    <li>@Html.ActionLink("环保知识", "Create", "Users")</li>
                    <li>@Html.ActionLink("实践社区", "Index", "Post")</li>
                    <li>@Html.ActionLink("系统公告", "Create", "Users")</li>
                </ul>
            </div>
            <!--右侧搜索框-->
            <div class="rightnav">
                <form action="">
                    <input type="text" placeholder="" class="searchbox" />
                    <button type="submit" class="btn btn-success">查找</button>
                </form>
            </div>

        </div>

    </div>
    <div>
        @RenderBody()
    </div>
</body>
</html>
