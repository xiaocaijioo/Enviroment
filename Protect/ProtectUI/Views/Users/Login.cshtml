
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}
<style>
    /*登录容器*/
    .login-container {
        width: 400px;
        height: 450px;
        position: absolute;
        border: 1px solid #191818;
        border-radius: 10px;
        top: 50%;
        left: 50%;
        -webkit-transform: translate(-50%,-50%);
        -moz-transform: translate(-50%, -50%);
        -ms-transform: translate(-50%, -50%);
        -o-transform: translate(-50%, -50%);
        transform: translate(-50%, -50%);
        box-shadow: 0px 16px 16px 0px rgba(0,0,0,0.2);
    }
    /*logo*/
    .logo-cantainer {
        margin-left:100px;
    }
    .loginlogo{   
        width:200px;
        height:100px;
    }

    /*输入框*/
    .form-item{
        position:relative;
        width:300px;
        height:60px;
        margin-left:45px;
        text-align:left;
        font-size:18px;
    }
    /*输入框默认字体*/
    input::placeholder{
        font-size:14px;

    }
    
    /*登录按钮*/
    .loginbtn{
        margin-left:40%;
    }

    /*验证码输入框*/
    .vaCodeinput-container{
        position:relative;
        float:left;
    }
    .vaCodeimg-container{
        position:relative;
        float:right;
    }
    .code{
        width:100px;
        height:30px;
    }


</style>
<script type="text/javascript">
    function mycheck() {
        if (account.value == "") {
            alert("用户名不能为空，请输入用户名！")
            form.accountf.focus();
            return RedirectToAction("Login", "Users");
        }
        if (password.value == "") {
            alert("密码不能为空，请输入用户名！")
            form.password.focus();
            return RedirectToAction("Login", "Users");
        }
        if (validationCode.value == "") {
            alert("验证码不能为空，请输入验证码！")
            form.password.focus();
            return RedirectToAction("Login", "Users");
        }

    }
</script>

<body>

     <div class="login-container">
        <div class="login">
            <div class="logo-cantainer">
                <img src="~/image/logo.png" class="loginlogo"/>
            </div>
            <hr/>
            <form class="loginform-container" id="loginform" name="loginform" method="post" action="Login" autocomplete="off" onsubmit="return checked()">
                <div class="form-item" id="idInputLine">
                    <span>账   号  </span>
                    <input type="text" name="account" id="account" placeholder="请输入账号" value="" />
                </div>
                <div class="form-item" id="pwdInputLine">
                    <span>密   码  </span>
                    <input type="password" name="password" id="password" placeholder="请输入您的密码" value="" />
                </div>
                <div class="form-item">
                    <div class="vaCodeinput-container">
                        <span>验证码</span><input type="text" name="validationCode" placeholder="请输入验证码" style="width:120px; " value="" />
                    </div>
                    <div class="vaCodeimg-container">
                        <img title="看不清？点击换一张"  class="code" src="@Url.Action("GetRandomCode", "Users")" onclick="this.src=this.src+'?'"/>
                    </div>
                </div>
                <div class="form-item">
                    <input type="submit" name="submit" value="登录" onclick="mycheck()" class="loginbtn" />
                </div>
                <p style="float:right; margin-right:30px;">@Html.ActionLink("没有账号？注册一个", "Create", "Users")</p>
            </form>
        </div>
    </div>

</body>

