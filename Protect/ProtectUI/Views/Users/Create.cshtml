@model Model.Users
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}
<style>
    /*注册容器*/
    .login-container {
        width: 400px;
        height: 450px;
        position: absolute;
        border: 1px solid #191818;
        border-radius: 10px;
        top: 50%;
        left: 50%;
        -webkit-transform: translate(-50%,-50%);
        -moz-transform: translate(-50%, -50%);
        -ms-transform: translate(-50%, -50%);
        -o-transform: translate(-50%, -50%);
        transform: translate(-50%, -50%);
        box-shadow: 0px 16px 16px 0px rgba(0,0,0,0.2);
    }
    /*logo*/
    .logo-cantainer {
        margin-left: 100px;
    }

    .loginlogo {
        width: 200px;
        height: 100px;
    }

    /*输入框*/
    .form-item {
        position: relative;
        width: 300px;
        height: 70px;
        margin-left: 60px;
        font-size: 18px;
    }

    .loginbtn {
        margin-left: 40%;
    }
</style>
<script type="text/javascript">
    function mycheck() {
        if (account.value == "") {
            alert("用户名不能为空，请输入用户名！")
            return;
        }
        if (password.value == "") {
            alert("密码不能为空，请输入用户名！")
            return;
        }
    }
</script>

<body>
    @using (Html.BeginForm(FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <div class="login-container">
            <div class="login">
                <div class="logo-cantainer">
                    <img src="~/image/logo.png" class="loginlogo" />
                </div>
                <hr />
                <div class="form-item">
                    <span>账   号 </span><input type="text" name="account" id="account"  />
                </div>
                <div class="form-item">
                    <span>密   码  </span><input type="password" name="password" id="password" />
                </div>
                <div class="form-item">
                    <span>昵  称  </span><input type="text" name="username" id="username" />
                </div>
                <div class="form-item">
                    <input type="submit" value="注册" onclick="mycheck()" class="loginbtn" />
                </div>
                <p style="float:right; margin-right:30px;">@Html.ActionLink("已有账号！直接登录", "Login", "Users")</p>

            </div>
        </div>
    }
</body>

